<div class='report__index-tr'>
  <div class='report__index-td--code'><%= account.code %></div>
  <div class='report__index-td--name'><%= account.name %></div>
  <div class='report__index-td--opening-balance'><%= array[0].to_s(:delimited) %></div>
  <div class='report__index-td--debit-balance'><%= array[1].to_s(:delimited) %></div>
  <div class='report__index-td--credit-balance'><%= array[2].to_s(:delimited) %></div>
  <div class='report__index-td--ending-balance'><%= array[3].to_s(:delimited) %></div>
  <div class='report__index-td--ledger'>
    <%= link_to '元帳', ledgers_path(id: account.id), class:'report__index-link' %>
  </div>
</div>