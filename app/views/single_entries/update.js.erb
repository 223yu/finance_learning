<% if flash[:danger] %>
  $('.flash').html('<%= j(render 'layouts/flash') %>');
  $('.entry__index-tr<%= @journal.id %>').html('<%= j(render 'single_entries/edit', journal: @journal) %>');
<% else %>
  $('.flash').html('<%= j(render 'layouts/flash') %>');
  $('.entry__index-tr<%= @journal.id %>').html('<%= j(render 'single_entries/show', journal: @journal) %>');
<% end %>


